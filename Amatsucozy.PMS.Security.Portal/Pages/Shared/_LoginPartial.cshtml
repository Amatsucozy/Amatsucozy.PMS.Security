@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="flex flex-row gap-2">
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="w-40" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        <form class="w-40" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    }
    else
    {
        <a class="w-40" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="w-40" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>