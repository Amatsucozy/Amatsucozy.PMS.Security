@using Amatsucozy.PMS.Security.Core.Identity
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<User> SignInManager

<div class="flex flex-row gap-4">
  @if (SignInManager.IsSignedIn(User))
  {
    <a class="link-button-primary" asp-page="/Account/Manage/Index" title="Manage">Manage</a>
    <form class="" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
      <button type="submit" class="button-warn">Logout</button>
    </form>
  }
  else
  {
    <a class="link-button-primary" asp-page="/Account/Register">Register</a>
    <a class="link-button-primary" asp-page="/Account/Login">Login</a>
  }
</div>
